<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <rotate
            >
            <shape
                android:shape="ring"
                android:thicknessRatio="16"
                android:useLevel="false"

                >
                <solid android:color="@color/colorProgressBarBackground" />
            </shape>
        </rotate>
    </item>


    <item>
        <rotate
            android:fromDegrees="-90"
            android:toDegrees="-90"
            >
            <shape
                android:shape="ring"
                android:thicknessRatio="16"
                android:useLevel="true">
                <solid android:color="@color/colorFirstActivityButtons" />
            </shape>
        </rotate>
    </item>

</layer-list>